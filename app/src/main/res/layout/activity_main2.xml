    <TextView
        android:id="@+id/titre2"
        android:layout_width="387dp"
        android:layout_height="46dp"
        android:text="TITRE"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/date2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121" />

    <TextView
        android:id="@+id/contenu"
        android:layout_width="393dp"
        android:layout_height="473dp"
        android:layout_marginTop="4dp"
        android:scrollbars="vertical"
        android:text="CONTENU ARTICLE"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/source2"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/auteur2"
        android:layout_width="228dp"
        android:layout_height="23dp"
        android:text="AUTEURS"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/source2"
        android:layout_width="151dp"
        android:layout_height="21dp"
        android:text="SOURCE"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auteur2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="320dp"
        android:layout_height="113dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/date2"
        android:layout_width="133dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
